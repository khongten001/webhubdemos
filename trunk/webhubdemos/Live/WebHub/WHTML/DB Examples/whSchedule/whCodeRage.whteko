</whprep>
<whoutput>
(~mcdoctypehtml~)
<html>
<head>
	(~drHead~)
	<link rel="stylesheet" type="text/css" href="(~mcSiteRoot~)demos/c/whdemosWebDataScan.css" />
<script type="text/javascript">
function setAllCheckboxes(b)
{
	var e = document.getElementById('checker-table');
  var arr = new Array();
  arr = document.getElementsByTagName( "input" );
  for(var i=0; i < arr.length; i++)
  {
    if (arr[i].type == 'checkbox')
		{
			arr[i].checked = b;
		}
  }
}	 
</script>
	<style type="text/css">
	#schedule-table td {
	  border: 0;
	 }
	.nowrap-td {
	 white-space:nowrap;
	 }
	.time-span {
		font-weight: 900;
/*		padding: 0 .2em 0 .2em;*/
	}
	.about-td {
		margin-bottom: 5em;
	}
	.aboutProducts-div {
		margin-left: 1em;
		color: #666666;
		font-size: smaller;
	}
	#checker-table td {
	  padding-right: 1.4em;
	 }
	</style>
</head>
<body>
(~drPageBegin~)
